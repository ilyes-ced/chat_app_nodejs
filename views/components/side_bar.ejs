                </g>
            </svg>
        </div>
        <div class="h-full flex items-center">
            <div class="flex flex-col">
                <div class="h-12 w-12 flex items-center justify-center border-l-4 border-dark_pink cursor-pointer transition-all duration-200 ease-in-out hover:bg-dark_pink">
                    <%- include('../icons/home.svg') %>
                </div>
                <div class="h-12 w-12 flex items-center justify-center border-l-4 border-transparent cursor-pointer transition-all duration-200 ease-in-out hover:bg-dark_pink">
                    <%- include('../icons/menu.svg') %>
                </div>
                <div class="h-12 w-12 flex items-center justify-center border-l-4 border-transparent cursor-pointer transition-all duration-200 ease-in-out hover:bg-dark_pink">
                    <%- include('../icons/groups.svg') %>
                </div>
                <div class="h-12 w-12 flex items-center justify-center border-l-4 border-transparent cursor-pointer transition-all duration-200 ease-in-out hover:bg-dark_pink">
                    <%- include('../icons/settings.svg') %>
                </div>
                <div class="h-12 w-12 flex items-center justify-center border-l-4 border-transparent cursor-pointer transition-all duration-200 ease-in-out hover:bg-dark_pink">
                    <%- include('../icons/logout.svg') %>
                </div>
            </div>
        </div>
    </div>





    <div class="h-full w-[300px] bg-primary p-2 border-r border-secondary transition-all ease-in-out duration-200">
        <div id="to_add_button_side" class="space-y-2"> 
            <h1>Conversations</h1>
            <input type="text" class="bg-transparent border border-[rgb(140,140,140)] rounded-md w-full px-4 py-[5px] outline-none" placeholder="Search for people . . .">
            <div class="flex flex-row justify-between">
                <div>placeholder  <%- include('../icons/chevron_down.svg') %></div>
                <div>placeholder  <%- include('../icons/chevron_down.svg') %></div>
            </div>
            <% for (var i = 0; i < rooms.length; i++) { %>
                <div class=" w-full bg-secondary flex flex-row px-4 py-2  items-start rounded-md cursor-pointer">
                    <div class="flex flex-row w-full h-full">
                        <div class="flex items-center">
                            <img src="public/images/<%= rooms[i].pfp %>" id="<%= rooms[i].id %>" class='change_chat_room  bg-tertiary w-8 h-8 hover:rounded-lg rounded-full '>
                        </div>
                        <div class="flex flex-col  p-2">
                            groupe name
                        </div>
                    </div>
                    <div class="rounded-md hover:bg-primary text-gray-600">
                        <%- include('../icons/three_dots.svg') %>
                    </div>
                </div>
            <% } %>
        </div>
        <button id="add_chat_room" class=' my-2 mx-auto bg-tertiary w-12 h-12 hover:rounded-lg rounded-full border-2 border-pink-600'>+</button>
    </div>

