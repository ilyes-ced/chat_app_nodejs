    <div class="w-12 flex flex-col">
        <div class="h-12 w-12 flex items-center justify-center">  
            <svg width="25" height="25" viewBox="0 0 55 55" version="1.1">
                <g id="layer1">
                    <rect style="fill:#293041;fill-opacity:1;stroke:#000000;stroke-width:0;stroke-dasharray:none" id="rect111" width="25" height="24.999998" x="5e-07" y="3.6816402e-07" />
